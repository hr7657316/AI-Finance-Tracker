# Prisma
# DATABASE_URL is used by the app at runtime.
# - On Neon, you typically want the pooled (pgbouncer) URL here.
# DIRECT_URL is used by Prisma for migrations/introspection.
# - Prefer the non-pooled "Direct" Neon URL here.
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public"

# Clerk (required for auth + middleware)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Optional Clerk settings
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"

# Optional integrations (not yet wired everywhere in this repo)
# GOOGLE_GENERATIVE_AI_API_KEY="..."
# RESEND_API_KEY="..."
# ARCJET_KEY="..."
